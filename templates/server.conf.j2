server {
        listen 80;
        listen [::]:80;

        root /var/www/{{ item }}/html;
        index index.html index.htm index.nginx-debian.html;

        server_name {{ item }} www.{{ item }};

        location / {
                try_files $uri $uri/ =404;
        }

        access_log /var/log/{{ item }}_access.log;
}